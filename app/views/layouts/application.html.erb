<!DOCTYPE html>
<html>
<head>
  <title>Redyco Desarrollo</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
</head>
<body>
  <header>
    <% if logged_in? %>
      <p>Hola, <%= current_user.nombre_usuario %>!</p>
      <%= link_to 'Cerrar Sesión', logout_path, method: :delete %>
    <% else %>
      <%= link_to 'Iniciar Sesión', root_path %>
    <% end %>
  </header>

  <%= yield %>
</body>
</html>
