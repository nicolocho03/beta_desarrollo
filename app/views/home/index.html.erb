<%= form_with(model: @user, url: login_path, local: true) do |form| %>
  <div class="field">
    <%= form.label :nombre_usuario, "Nombre de Usuario" %>
    <%= form.text_field :nombre_usuario %>
  </div>

  <div class="field">
    <%= form.label :password, "Contraseña" %>
    <%= form.password_field :password %>
  </div>

  <div class="actions">
    <%= form.submit "Iniciar Sesión" %>
  </div>
<% end %>