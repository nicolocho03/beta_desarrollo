<% if compras_has_access? %>
<h1>Facturas en Compras</h1>

<table>
  <thead>
    <tr>
      <th>Radicado</th>
      <th>SAO</th>
      <th>Numero Factura</th>
      <th>Tipo Proyecto</th>
      <th>Fecha de Llegada a Recepcion</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @bills.each do |bill| %>
      <tr>
        <td><%= bill.radicado %></td>
        <td><%= bill.SAO %></td>
        <td><%= bill.numero_factura %></td>
        <td><%= bill.tipo_proyecto %></td>
        <td><%= bill.fecha_llegada_recepcion %></td>
        <td>
          <% if bill.fecha_entrega_sst.blank? %>
            <!-- Factura que viene de RecepciÃ³n -->
            <%= link_to 'Editar', edit_compras_bill_path(bill) %>
            <%= link_to 'Enviar a SST', update_compras_bill_path(bill), method: :patch %>
          <% else %>
            <!-- Factura que viene de SST (segunda vuelta) -->
            <%= link_to 'Editar Segunda Vuelta', edit_compras_segunda_entrega_bill_path(bill) %>
            <%= link_to 'Enviar a Gerencia', update_compras_segunda_entrega_bill_path(bill), method: :patch %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
  <% else %>
  <div id="permission-alert" data-message="No tienes permiso para acceder a esta vista" style="display: none;"></div>
<% end %>




